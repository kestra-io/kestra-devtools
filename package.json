{
  "name": "@kestra-io/kestra-devtools",
  "version": "1.0.34",
  "description": "a CLI tool to run various dev tasks to build, test, release Kestra",
  "bin": {
    "kestra-devtools": "dist/kestra-devtools.cjs"
  },
  "main": "dist/kestra-devtools.cjs",
  "files": [
    "dist/"
  ],
  "scripts": {
    "dev": "vitest --watch",
    "build": "vite build && tsc -p tsconfig.types.json",
    "test": "npm run lint && vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "format": "prettier --write .",
    "start": "node dist/kestra-devtools.cjs",
    "version": "npm run build && chmod +x dist/kestra-devtools.cjs && git add -A dist",
    "postversion": "git push && git push --tags && rm -rf build/temp"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kestra-io/kestra-devtools.git"
  },
  "author": "kestra-io",
  "license": "MIT",
  "type": "module",
  "preferGlobal": true,
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "axios": "^1.12.2",
    "fast-xml-parser": "^5.2.5",
    "node-notifier": "^10.0.1",
    "octokit": "^5.0.3"
  }
}
